<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Friend</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.status %></td>
        <td><%= link_to 'Check', check_user_payment_path(current_user, payment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New payment', new_user_payment_path(current_user) %>
